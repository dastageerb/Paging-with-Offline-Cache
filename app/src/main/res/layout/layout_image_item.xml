<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp">
    <RelativeLayout
        android:id="@+id/layoutImageItemTopBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_alignParentStart="true"
            android:id="@+id/layoutImageItemRoundImageLayout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            android:elevation="4dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            >
            <ImageView
                android:id="@+id/layoutImageItemImageViewUserProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/layoutImageItemTextViewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ishoaib_bughio"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/layoutImageItemRoundImageLayout"/>

        <TextView
            android:id="@+id/layoutImageItemTextViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jamshoro , Sindh"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/layoutImageItemRoundImageLayout"
            android:layout_below="@id/layoutImageItemTextViewUserName"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_more_options_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:elevation="8dp"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>


    <ImageView
        android:id="@+id/layoutImageItemImageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="fitXY"
        android:layout_below="@id/layoutImageItemTopBar"
        />

    <ImageView
        android:id="@+id/layoutImageItemImageViewHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_favorite_border_24"
        android:layout_below="@id/layoutImageItemImageView"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp"
        />

    <TextView
        android:id="@+id/layoutImageItemTextViewLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutImageItemImageViewHeart"
        android:text="14 likes"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
</RelativeLayout>